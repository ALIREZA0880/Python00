      "source": [
        "def is_palindrome(word):\n",
        "    return word == word[::-1]\n",
        "\n",
        "text = \"radar\"\n",
        "if is_palindrome(text):\n",
        "    print(text, \"is a palindrome.\")\n",
        "else:\n",
        "    print(text, \"is not a palindrome.\")"
      ]
    }
  ]
